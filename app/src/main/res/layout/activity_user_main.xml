<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.devil.mapdemo.userinfo.UserMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="用户中心"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="用户名："
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="50dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:layout_weight="1.3">
        </TextView>
        <TextView
            android:text="devilmaycry812839668"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:gravity="right"
            android:layout_marginTop="50dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="3">
        </TextView>
        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="50dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.8">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="电话："
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:layout_weight="1.3">
        </TextView>
        <TextView
            android:text="15998253975"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_phone"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="3">
        </TextView>
        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.8">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="邮箱："
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:layout_weight="1.3">
        </TextView>
        <TextView
            android:text="812839668@qq.com"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_email"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="3">
        </TextView>
        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.8">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="钱包："
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:layout_weight="1.3">
        </TextView>

        <TextView
            android:text="100.00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_money"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="3">
        </TextView>
        <TextView
            android:text="元"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.8">
        </TextView>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="总用时："
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:layout_weight="1.3">
        </TextView>

        <TextView
            android:text="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_hours"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="1.9">
        </TextView>

        <TextView
            android:text="小时"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.8">
        </TextView>

        <TextView
            android:text="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_minutes"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.3">
        </TextView>
        <TextView
            android:text="分钟"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_weight="0.8">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:text="充值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:id="@+id/user_button_1" />

        <Button
            android:text="修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:id="@+id/user_button_2" />
    </LinearLayout>
</LinearLayout>
