<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="扫码"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/bt_scan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_scan_white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="扫一扫"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:text="开锁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scanButton"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/ll_scan"
            android:layout_toEndOf="@+id/ll_scan" />

        <TextView
            android:text="自行车编码：空"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textScan"
            android:layout_marginStart="21dp"
            android:layout_alignBaseline="@+id/scanButton"
            android:layout_alignBottom="@+id/scanButton"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</LinearLayout>
