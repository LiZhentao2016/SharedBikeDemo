<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.devil.mapdemo.history.MainHistoryActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="行程管理"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_pull_refresh_lv2"
        app:ptrAnimationStyle="flip"
        app:ptrHeaderBackground="@android:color/transparent"
        app:ptrHeaderTextColor="#919191"/>

</LinearLayout>
